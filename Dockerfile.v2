ARG BASE_IMAGE=ubuntu:24.04

#==============================================
# Build Stage - Ubuntu & Fedora Support with Debug
#==============================================
FROM ${BASE_IMAGE} AS fex-builder

ARG TARGETPLATFORM 
ARG ROOTFS_OS=ubuntu
ARG ROOTFS_VERSION="24.04"
ARG LLVM_VERSION=18
ARG CCACHE_DIR=/tmp/.ccache
ARG ENABLE_CCACHE=false

# Set environment variables for non-interactive installation and ccache
ENV DEBIAN_FRONTEND=noninteractive 
ENV TZ=Asia/Seoul
ENV CCACHE_DIR=${CCACHE_DIR}
ENV ENABLE_CCACHE=${ENABLE_CCACHE}

# Detect OS type with debugging
RUN echo "ğŸ” Starting OS detection..." && \
    if [ -f /etc/redhat-release ] || [ -f /etc/fedora-release ]; then \
        echo "ğŸ§ Detected: Fedora/RHEL distribution" && \
        echo "DISTRO_TYPE=fedora" > /etc/distro-info; \
    elif [ -f /etc/debian_version ] || [ -f /etc/lsb-release ]; then \
        echo "ğŸ§ Detected: Debian/Ubuntu distribution" && \
        echo "DISTRO_TYPE=debian" > /etc/distro-info && \
        export DEBIAN_FRONTEND=noninteractive && \
        ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && \
        echo $TZ > /etc/timezone; \
    else \
        echo "âŒ Unknown distribution type" && \
        echo "DISTRO_TYPE=unknown" > /etc/distro-info; \
    fi && \
    echo "âœ… OS detection completed"

# Install build dependencies with detailed debugging
RUN echo "ğŸ“¦ Starting package installation..." && \
    . /etc/distro-info && \
    echo "ğŸ” Distribution type: $(cat /etc/distro-info)" && \
    if [ "$DISTRO_TYPE" = "debian" ]; then \
        echo "ğŸ”§ Setting up Debian/Ubuntu environment..." && \
        apt-get update && \
        echo "ğŸ“¦ Installing base development packages..." && \
        apt-get install -y --no-install-recommends \
            git cmake ninja-build pkg-config ccache \
            nasm python3-dev python3-clang python3-setuptools \
            libcap-dev libglfw3-dev libepoxy-dev libsdl2-dev \
            linux-headers-generic curl wget \
            software-properties-common openssl libssl-dev && \
        echo "âœ… Base packages installed successfully" && \
        \
        # LLVM installation with debugging
        if [ "${ROOTFS_OS}" = "ubuntu" ]; then \
            echo "ğŸ” Processing Ubuntu-specific configuration..." && \
            UBUNTU_VERSION_NUM=$(echo "${ROOTFS_VERSION}" | sed 's/\.//') && \
            echo "ğŸ“Š ROOTFS_VERSION: ${ROOTFS_VERSION}" && \
            echo "ğŸ“Š UBUNTU_VERSION_NUM: ${UBUNTU_VERSION_NUM}" && \
            echo "ğŸ§ª Testing version comparison: [ ${UBUNTU_VERSION_NUM} -ge 2404 ]" && \
            if [ "${UBUNTU_VERSION_NUM}" -ge "2404" ]; then \
                echo "âœ… Ubuntu 24.04+ detected - using repository LLVM" && \
                apt-get install -y clang-${LLVM_VERSION} lld-${LLVM_VERSION} llvm-${LLVM_VERSION} && \
                echo "âœ… LLVM ${LLVM_VERSION} installed from repository"; \
            else \
                echo "ğŸ”§ Ubuntu <24.04 detected - using LLVM script" && \
                add-apt-repository ppa:ubuntu-toolchain-r/test -y && \
                apt-get update && \
                apt-get install --only-upgrade libstdc++6 -y && \
                echo "ğŸ“¥ Downloading LLVM installation script..." && \
                wget https://apt.llvm.org/llvm.sh && \
                chmod +x llvm.sh && \
                echo "ğŸ”§ Installing LLVM ${LLVM_VERSION} via script..." && \
                ./llvm.sh ${LLVM_VERSION} && \
                rm llvm.sh && \
                echo "âœ… LLVM ${LLVM_VERSION} installed via script"; \
            fi && \
            \
            # Qt installation debugging
            echo "ğŸ” Checking Qt installation requirements..." && \
            echo "ğŸ§ª Testing Ubuntu version for Qt: [ ${UBUNTU_VERSION_NUM} -eq 2004 ]" && \
            if [ "${UBUNTU_VERSION_NUM}" -eq "2004" ]; then \
                echo "ğŸ¨ Ubuntu 20.04 detected - installing Qt 5.15+" && \
                add-apt-repository ppa:beineri/opt-qt-5.15.2-focal -y && \
                apt-get update && \
                apt-get install -y qt515-meta-minimal qt515declarative qt515tools && \
                echo 'source /opt/qt515/bin/qt515-env.sh' >> ~/.bashrc && \
                echo "âœ… Qt 5.15+ installed for Ubuntu 20.04"; \
            else \
                echo "ğŸ“¦ Installing default Qt packages for Ubuntu ${ROOTFS_VERSION}" && \
                apt-get install -y qtbase5-dev qtdeclarative5-dev && \
                echo "âœ… Default Qt packages installed"; \
            fi; \
        else \
            echo "ğŸ”§ Processing non-Ubuntu Debian distribution..." && \
            apt-get install -y clang-${LLVM_VERSION} lld-${LLVM_VERSION} llvm-${LLVM_VERSION} || \
            (echo "ğŸ“¥ Falling back to LLVM script..." && \
             wget https://apt.llvm.org/llvm.sh && chmod +x llvm.sh && ./llvm.sh ${LLVM_VERSION} && rm llvm.sh) && \
            apt-get install -y qtbase5-dev qtdeclarative5-dev && \
            echo "âœ… Packages installed for Debian distribution"; \
        fi && \
        \
        # Cleanup with status
        echo "ğŸ§¹ Creating symlinks and cleaning up..." && \
        update-alternatives --install /usr/bin/lld lld /usr/bin/lld-${LLVM_VERSION} 100 && \
        apt-get autoremove -y && \
        apt-get autoclean && \
        rm -rf /var/lib/apt/lists/* /var/tmp/* && \
        echo "âœ… Debian/Ubuntu setup completed successfully"; \
    elif [ "$DISTRO_TYPE" = "fedora" ]; then \
        echo "ğŸ”§ Setting up Fedora environment..." && \
        dnf update -y && \
        echo "ğŸ” Checking LLVM availability..." && \
        if dnf list available llvm${LLVM_VERSION} 2>/dev/null | grep -q llvm${LLVM_VERSION}; then \
            echo "âœ… LLVM ${LLVM_VERSION} available in Fedora repositories" && \
            dnf install -y \
                @development-tools cmake ninja-build pkg-config ccache \
                llvm${LLVM_VERSION} clang${LLVM_VERSION} lld${LLVM_VERSION} \
                compiler-rt${LLVM_VERSION} libomp${LLVM_VERSION} \
                libstdc++-devel libstdc++-static glibc-devel \
                gcc-c++ binutils-devel; \
        else \
            echo "âš ï¸ LLVM ${LLVM_VERSION} not available, using default" && \
            dnf install -y \
                @development-tools cmake ninja-build pkg-config ccache \
                llvm llvm-devel clang clang-devel lld \
                libstdc++-devel libstdc++-static glibc-devel \
                gcc-c++ binutils-devel; \
        fi && \
        echo "ğŸ”— Creating tool symlinks..." && \
        for tool in ar nm objdump strip; do \
            if [ -f "/usr/bin/llvm-$tool" ] && [ ! -f "/usr/bin/llvm-$tool-${LLVM_VERSION}" ]; then \
                ln -sf "/usr/bin/llvm-$tool" "/usr/bin/llvm-$tool-${LLVM_VERSION}"; \
            fi; \
        done && \
        echo "ğŸ“¦ Installing additional Fedora packages..." && \
        dnf install -y \
            nasm python3-clang python3-setuptools openssl-devel \
            libcap-devel glfw-devel libepoxy-devel SDL2-devel \
            qt5-qtdeclarative-devel qt5-qtquickcontrols qt5-qtquickcontrols2 \
            curl wget && \
        dnf clean all && \
        echo "âœ… Fedora setup completed successfully"; \
    else \
        echo "âŒ Unsupported distribution type" && exit 1; \
    fi && \
    echo "ğŸ‰ All package installation completed!"

# Copy FEX source and build with comprehensive debugging
COPY --from=fex-sources / /tmp/fex-source  
RUN --mount=type=cache,target=/tmp/.ccache \
    echo "ğŸ—ï¸ Starting FEX build process..." && \
    cd /tmp/fex-source && \
    mkdir -p Build && cd Build && \
    echo "ğŸ“Š Build environment summary:" && \
    echo "  - ENABLE_CCACHE: ${ENABLE_CCACHE}" && \
    echo "  - CCACHE_DIR: ${CCACHE_DIR}" && \
    echo "  - LLVM_VERSION: ${LLVM_VERSION}" && \
    \
    # Configure ccache environment
    if [ "${ENABLE_CCACHE:-false}" = "true" ]; then \
        echo "ğŸš€ Configuring ccache acceleration..." && \
        mkdir -p /tmp/ccache-temp && \
        export CCACHE_BASEDIR=/tmp/fex-source && \
        export CCACHE_TEMPDIR=/tmp/ccache-temp && \
        export CCACHE_DIR=/tmp/.ccache && \
        export CCACHE_MAXSIZE=2G && \
        export CCACHE_COMPRESS=1 && \
        export CCACHE_SLOPPINESS=pch_defines,time_macros && \
        ccache --zero-stats && \
        echo "âœ… ccache enabled with directory: $CCACHE_DIR"; \
    else \
        echo "â„¹ï¸ ccache disabled for this build"; \
    fi && \
    \
    # Detect and configure compiler
    echo "ğŸ” Detecting compilers..." && \
    if command -v clang-${LLVM_VERSION} >/dev/null 2>&1; then \
        CC_COMPILER=clang-${LLVM_VERSION}; \
        CXX_COMPILER=clang++-${LLVM_VERSION}; \
        echo "âœ… Using versioned compilers: $CC_COMPILER / $CXX_COMPILER"; \
    else \
        CC_COMPILER=clang; \
        CXX_COMPILER=clang++; \
        echo "âš ï¸ Using default compilers: $CC_COMPILER / $CXX_COMPILER"; \
    fi && \
    \
    # Configure OS-specific linker flags
    echo "ğŸ”— Configuring linker flags..." && \
    . /etc/distro-info && \
    if [ "$DISTRO_TYPE" = "debian" ]; then \
        LINKER_FLAGS="-static-libstdc++ -static-libgcc"; \
        echo "ğŸ“‹ Debian linker flags: $LINKER_FLAGS"; \
    elif [ "$DISTRO_TYPE" = "fedora" ]; then \
        LINKER_FLAGS="-static-libstdc++ -static-libgcc -Wl,--as-needed"; \
        echo "ğŸ“‹ Fedora linker flags: $LINKER_FLAGS"; \
    fi && \
    \
    # Build FEX with conditional ccache
    echo "âš™ï¸ Running CMake configuration..." && \
    if [ "${ENABLE_CCACHE:-false}" = "true" ]; then \
        echo "ğŸš€ Building with ccache acceleration..." && \
        CC=$CC_COMPILER CXX=$CXX_COMPILER cmake \
            -DCMAKE_INSTALL_PREFIX=/usr/local/fex \
            -DCMAKE_BUILD_TYPE=Release \
            -DUSE_LINKER=lld \
            -DENABLE_LTO=True \
            -DBUILD_TESTS=False \
            -DENABLE_ASSERTIONS=False \
            -DCMAKE_C_COMPILER_LAUNCHER=ccache \
            -DCMAKE_CXX_COMPILER_LAUNCHER=ccache \
            -DCMAKE_EXE_LINKER_FLAGS="$LINKER_FLAGS" \
            -DCMAKE_SHARED_LINKER_FLAGS="$LINKER_FLAGS" \
            -G Ninja ..; \
    else \
        echo "ğŸ”¨ Building without ccache..." && \
        CC=$CC_COMPILER CXX=$CXX_COMPILER cmake \
            -DCMAKE_INSTALL_PREFIX=/usr/local/fex \
            -DCMAKE_BUILD_TYPE=Release \
            -DUSE_LINKER=lld \
            -DENABLE_LTO=True \
            -DBUILD_TESTS=False \
            -DENABLE_ASSERTIONS=False \
            -DCMAKE_EXE_LINKER_FLAGS="$LINKER_FLAGS" \
            -DCMAKE_SHARED_LINKER_FLAGS="$LINKER_FLAGS" \
            -G Ninja ..; \
    fi && \
    echo "âœ… CMake configuration completed" && \
    \
    echo "ğŸ”¨ Starting compilation with $(nproc) cores..." && \
    ninja -j$(nproc) && \
    echo "âœ… Compilation completed successfully" && \
    \
    echo "ğŸ“¦ Installing FEX binaries..." && \
    ninja install && \
    echo "âœ… Installation completed" && \
    \
    # Show ccache statistics if enabled
    if [ "${ENABLE_CCACHE:-false}" = "true" ]; then \
        echo "ğŸ“Š ccache Statistics:" && \
        ccache --show-stats && \
        echo "ğŸ’¾ ccache directory size: $(du -sh /tmp/.ccache 2>/dev/null || echo 'unknown')"; \
    fi && \
    \
    echo "ğŸ§¹ Cleaning up build artifacts..." && \
    rm -rf /tmp/fex-source && \
    echo "ğŸ‰ FEX build completed successfully!"

#==============================================
# Runtime Stage - Ubuntu & Fedora Support with Debug
#==============================================
FROM ${BASE_IMAGE} AS runtime

ARG TARGETPLATFORM 
ARG ROOTFS_OS=ubuntu
ARG ROOTFS_VERSION="24.04"
ARG ROOTFS_TYPE=squashfs

# Set environment variables for non-interactive installation
ENV DEBIAN_FRONTEND=noninteractive 
ENV TZ=Asia/Seoul

# Detect OS type for runtime with debugging
RUN echo "ğŸ” Starting runtime OS detection..." && \
    if [ -f /etc/redhat-release ] || [ -f /etc/fedora-release ]; then \
        echo "ğŸ§ Runtime: Detected Fedora/RHEL distribution" && \
        echo "DISTRO_TYPE=fedora" > /etc/distro-info; \
    elif [ -f /etc/debian_version ] || [ -f /etc/lsb-release ]; then \
        echo "ğŸ§ Runtime: Detected Debian/Ubuntu distribution" && \
        echo "DISTRO_TYPE=debian" > /etc/distro-info && \
        export DEBIAN_FRONTEND=noninteractive && \
        ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && \
        echo $TZ > /etc/timezone && \
        echo "â° Timezone set to: $TZ"; \
    else \
        echo "âŒ Runtime: Unknown distribution type" && \
        echo "DISTRO_TYPE=unknown" > /etc/distro-info; \
    fi && \
    echo "âœ… Runtime OS detection completed"

# Install runtime dependencies only with detailed debugging
RUN echo "ğŸ“¦ Starting runtime dependencies installation..." && \
    . /etc/distro-info && \
    echo "ğŸ” Runtime distribution type: $(cat /etc/distro-info)" && \
    echo "ğŸ“Š Runtime build parameters:" && \
    echo "  - ROOTFS_OS: ${ROOTFS_OS}" && \
    echo "  - ROOTFS_VERSION: ${ROOTFS_VERSION}" && \
    echo "  - ROOTFS_TYPE: ${ROOTFS_TYPE}" && \
    if [ "$DISTRO_TYPE" = "debian" ]; then \
        echo "ğŸ”§ Setting up Debian/Ubuntu runtime environment..." && \
        apt-get update && \
        echo "ğŸ“¦ Installing minimal runtime packages..." && \
        apt-get install -y --no-install-recommends \
            squashfs-tools squashfuse sudo \
            libstdc++6 libc6 && \
        echo "âœ… Basic runtime packages installed" && \
        \
        # Install latest libstdc++6 for Ubuntu versions < 24.04
        if [ "${ROOTFS_OS}" = "ubuntu" ]; then \
            echo "ğŸ” Checking Ubuntu version for libstdc++6 upgrade..." && \
            UBUNTU_VERSION_NUM=$(echo "${ROOTFS_VERSION}" | sed 's/\.//') && \
            echo "ğŸ“Š Runtime UBUNTU_VERSION_NUM: ${UBUNTU_VERSION_NUM}" && \
            echo "ğŸ§ª Testing version comparison: [ ${UBUNTU_VERSION_NUM} -lt 2404 ]" && \
            if [ "${UBUNTU_VERSION_NUM}" -lt "2404" ]; then \
                echo "ğŸ”§ Ubuntu <24.04 detected - upgrading libstdc++6..." && \
                apt-get install -y software-properties-common && \
                add-apt-repository ppa:ubuntu-toolchain-r/test -y && \
                apt-get update && \
                apt-get install --only-upgrade libstdc++6 -y && \
                echo "âœ… libstdc++6 upgraded for Ubuntu ${ROOTFS_VERSION}"; \
            else \
                echo "â„¹ï¸ Ubuntu 24.04+ detected - using default libstdc++6"; \
            fi; \
        else \
            echo "â„¹ï¸ Non-Ubuntu distribution - skipping libstdc++6 upgrade"; \
        fi && \
        \
        # Thorough cleanup for size optimization
        echo "ğŸ§¹ Performing thorough cleanup for size optimization..." && \
        apt-get autoremove -y && \
        apt-get autoclean && \
        rm -rf /var/lib/apt/lists/* /var/tmp/* /var/cache/* && \
        echo "ğŸ—‘ï¸ Cleaning documentation and locales..." && \
        find /usr/share/doc -depth -type f ! -name copyright -delete 2>/dev/null || true && \
        find /usr/share/man -depth -type f -delete 2>/dev/null || true && \
        rm -rf /usr/share/locale/* 2>/dev/null || true && \
        mkdir -p /usr/share/locale/en_US.UTF-8 2>/dev/null || true && \
        echo "âœ… Debian/Ubuntu runtime setup completed successfully"; \
    elif [ "$DISTRO_TYPE" = "fedora" ]; then \
        echo "ğŸ”§ Setting up Fedora runtime environment..." && \
        echo "ğŸ“¦ Installing minimal Fedora runtime packages..." && \
        dnf install -y --setopt=install_weak_deps=False \
            squashfs-tools squashfuse erofs-fuse erofs-utils \
            sudo util-linux-core libstdc++ glibc && \
        echo "âœ… Fedora runtime packages installed" && \
        echo "ğŸ§¹ Cleaning up Fedora package cache..." && \
        dnf clean all && \
        rm -rf /var/cache/dnf /var/tmp/* && \
        echo "âœ… Fedora runtime setup completed successfully"; \
    else \
        echo "âŒ Unsupported distribution type for runtime" && exit 1; \
    fi && \
    echo "ğŸ‰ Runtime dependencies installation completed!"

# Copy FEX binaries from build stage and optimize with debugging
RUN echo "ğŸ“ Copying FEX binaries from build stage..." && \
    echo "ğŸ” Checking FEX installation directory..." && \
    ls -la /usr/local/fex/ 2>/dev/null || echo "âš ï¸ FEX directory not found yet"
COPY --from=fex-builder /usr/local/fex /usr/local/fex
RUN echo "âœ… FEX binaries copied successfully" && \
    echo "ğŸ“Š FEX installation summary:" && \
    ls -la /usr/local/fex/bin/ && \
    echo "ğŸ”§ Optimizing FEX binaries..." && \
    strip /usr/local/fex/bin/* 2>/dev/null || true && \
    echo "ğŸ”§ Optimizing FEX shared libraries..." && \
    find /usr/local/fex -name "*.so*" -exec strip --strip-unneeded {} + 2>/dev/null || true && \
    echo "ğŸ“ Binary sizes after optimization:" && \
    du -sh /usr/local/fex/bin/* 2>/dev/null || echo "Could not measure binary sizes" && \
    echo "âœ… FEX binary optimization completed"
ENV PATH="/usr/local/fex/bin:$PATH"

# Create user with OS-specific configuration and debugging
RUN echo "ğŸ‘¤ Starting user creation and configuration..." && \
    . /etc/distro-info && \
    echo "ğŸ” Creating user 'fex' with bash shell..." && \
    useradd -m -s /bin/bash fex && \
    echo "âœ… User 'fex' created successfully" && \
    echo "ğŸ” Configuring sudo permissions based on distribution..." && \
    if [ "$DISTRO_TYPE" = "debian" ]; then \
        echo "ğŸ§ Adding fex to sudo group (Debian/Ubuntu)" && \
        usermod -aG sudo fex && \
        echo "âœ… User added to sudo group"; \
    elif [ "$DISTRO_TYPE" = "fedora" ]; then \
        echo "ğŸ§ Adding fex to wheel group (Fedora)" && \
        usermod -aG wheel fex && \
        echo "âœ… User added to wheel group"; \
    fi && \
    echo "ğŸ”‘ Setting up passwordless sudo access..." && \
    echo "fex ALL=(ALL) NOPASSWD: ALL" > /etc/sudoers.d/fex && \
    echo "âœ… Sudo configuration completed" && \
    echo "ğŸ“Š User configuration summary:" && \
    id fex && \
    groups fex && \
    echo "ğŸ‰ User creation and configuration completed!"

USER fex
WORKDIR /home/fex

# Setup RootFS using FEXRootFSFetcher with comprehensive debugging
RUN echo "ğŸš€ Starting RootFS setup process..." && \
    echo "ğŸ“Š RootFS configuration:" && \
    echo "  - Target OS: ${ROOTFS_OS}" && \
    echo "  - Target Version: ${ROOTFS_VERSION}" && \
    echo "  - RootFS Type: ${ROOTFS_TYPE}" && \
    echo "ğŸ” Checking FEXRootFSFetcher availability..." && \
    which FEXRootFSFetcher && \
    FEXRootFSFetcher --help | head -5 2>/dev/null || echo "âš ï¸ Could not display FEXRootFSFetcher help" && \
    echo "ğŸ“¥ Starting RootFS download and extraction..." && \
    echo "â³ This process may take several minutes..." && \
    FEXRootFSFetcher -yx --distro-name=${ROOTFS_OS} --distro-version=${ROOTFS_VERSION} --force-ui=tty && \
    echo "âœ… RootFS download and extraction completed" && \
    \
    echo "ğŸ”§ Configuring RootFS permissions..." && \
    chown -R fex:fex /home/fex/.fex-emu && \
    echo "âœ… RootFS permissions configured" && \
    \
    echo "ğŸ§¹ Cleaning up RootFS artifacts..." && \
    echo "ğŸ“Š RootFS contents before cleanup:" && \
    ls -la /home/fex/.fex-emu/RootFS/ 2>/dev/null || echo "RootFS directory not found" && \
    rm -rf /home/fex/.fex-emu/RootFS/*.sqsh && \
    rm -rf /home/fex/.fex-emu/RootFS/*.ero && \
    echo "ğŸ“Š RootFS contents after cleanup:" && \
    ls -la /home/fex/.fex-emu/RootFS/ 2>/dev/null || echo "RootFS directory not found" && \
    echo "ğŸ’¾ Final RootFS size:" && \
    du -sh /home/fex/.fex-emu/ 2>/dev/null || echo "Could not measure RootFS size" && \
    echo "ğŸ‰ RootFS extracted and configured successfully!"

ENTRYPOINT ["/bin/bash", "-c"]
CMD ["/bin/bash"]
